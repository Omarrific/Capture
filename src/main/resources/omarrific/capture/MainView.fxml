<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="omarrific.capture.MainController">
  <top>
    <HBox>
      <Button fx:id="newNote" text="New Note" />
      <Button fx:id="saveNote" text="Save Note" />
      <Button fx:id="loadNote" text="Load Note" />
      <Button fx:id="deleteNote" text="Delete Note" />
    </HBox>
  </top>
  <center>
    <TextArea fx:id="noteArea"/>
  </center>
</BorderPane>